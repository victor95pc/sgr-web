<!DOCTYPE html>
<html>
<head>
  <title>SGR</title>
  <%= stylesheet_link_tag "fundo" %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application.js", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "#{params[:controller]}-#{params[:action]}", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="container">
  <%= image_tag('SGRLogo.png', id: 'logoSGR') %>
  <div id="menu_superior">

    <% listar_menu_superior do |nome_menus, link_menus, ativo| %>
        <%= link_to nome_menus, link_menus, class: ativo %>
    <% end %>
  </div>

  <%= yield %>
</div>

</body>
</html>
